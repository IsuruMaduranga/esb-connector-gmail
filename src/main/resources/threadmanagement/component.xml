<component name="threadmanagement" type="synapse/template" displayName="Thread Management">
    <subComponents>
        <component name="listAllThreads">
            <displayName>List All Threads</displayName>
            <file>listAllThreads.xml</file>
            <description>List all threads</description>
        </component>
        <component name="readThread">
            <displayName>Read Thread</displayName>
            <file>readThread.xml</file>
            <description>get an email thread</description>
        </component>
        <component name="trashThread">
            <displayName>Trash Thread</displayName>
            <file>trashThread.xml</file>
            <description>Send thread to trash</description>
        </component>
        <component name="unTrashThread">
            <displayName>Un Trash Thread</displayName>
            <file>unTrashThread.xml</file>
            <description>Removed thread from trash</description>
        </component>
        <component name="modifyExistingThread">
            <displayName>Modify Existing Thread</displayName>
            <file>modifyExistingThread.xml</file>
            <description>Modify existing thread</description>
        </component>
        <component name="deleteThread">
            <displayName>Delete Thread</displayName>
            <file>deleteThread.xml</file>
            <description>Delete an existing thread</description>
        </component>
    </subComponents>
</component>
